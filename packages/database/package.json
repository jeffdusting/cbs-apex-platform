  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "typescript": "^5.1.6",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "jest": "^30.1.3",
    "@types/jest": "^30.0.0",
    "supabase": "^1.100.0"
  }
}

